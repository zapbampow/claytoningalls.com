---
import Comment from "./Comment.astro";
import Photo from "./Photo.astro";
import ArticlePreview from "./ArticlePreview.astro";
import Article from "./Article.astro";
import "./unsocial.css";

const props = Astro.props;
const { post, isPreview } = props;
const type = post.data.type;
const data = post.data;
const body = post.body;
const slug = post.slug;
---

{
  type === "comment" && (
    <Comment data={data}>
      <slot />
    </Comment>
  )
}
{
  type === "photo" && (
    <Photo data={data} body={body}>
      <slot />
    </Photo>
  )
}
{type === "article" && isPreview && <ArticlePreview data={data} slug={slug} />}
{
  type === "article" && !isPreview && (
    <Article data={data}>
      <slot />
    </Article>
  )
}
