---

const props = Astro.props;

const direction = props.direction || "row";
const gap = props.gap || 0;
const align = props.align || "flex-start";
const justify = props.justify || "flex-start";
const As = props.as || "div";

const styles = `
    display: flex; flex-direction: ${direction}; gap: ${gap}; align-items: ${align}; justify-content: ${justify}; 
`

---
<As class="flex-component" style={styles}>
    <slot />
</As>