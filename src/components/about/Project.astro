---
import type { Project } from "@data/about/projects"

type Props = Project;

const {title, shortDescription, longDescription, img, links} = Astro.props

---
<div class="wrapper">
  <img src={img.url} alt={img.alt} />

  <div>
    <h3>{title}</h3>
    <p>{shortDescription}</p>
  </div>
</div>

