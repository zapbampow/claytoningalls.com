---
import { getCollection } from "astro:content";
import Snippet from "./Snippet.astro";

const snippets = await getCollection("snippets");
const publishedSnippets = snippets.filter(
  (snippet) => snippet.data.status === "published"
);
---

<ul class="snippets-list">
  {publishedSnippets.map((snippet) => <Snippet snippet={snippet} />)}
</ul>

<style>
  .snippets-list {
    display: grid;
    grid-template-columns: 1fr 1fr;
    margin-block: 10rem;
  }
</style>
